<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.yin.com.ui.fragment.AllClassFragment">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/classFragment_srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlPrimaryColor="?attr/colorPrimary"
            app:srlAccentColor="@android:color/white"
            app:srlDrawableProgress="@drawable/animation_loading_frame"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/classFragmente_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             />
        <com.scwang.smartrefresh.layout.footer.BallPulseFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlClassicsSpinnerStyle="Scale"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</FrameLayout>
